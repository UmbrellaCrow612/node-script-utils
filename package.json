  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {},
  "keywords": [
    "ci",
    "cd",
    "ci-cd",
    "continuous-integration",
    "github-actions",
    "gitlab-ci",
    "circleci",
    "jenkins",
    "travis",
    "azure-pipelines",
    "environment-detection",
    "devops",
    "automation",
    "typescript",
    "zero-dependency"
